{
	"name": "apc-ups",
	"version": "1.0.1",
	"main": "dist/main.js",
	"scripts": {
		"prepare": "husky",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"format": "prettier -w .",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"dist": "yarn companion-module-build",
		"package": "rimraf dist && yarn build:main && yarn dist"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-apc-ups.git"
	},
	"dependencies": {
		"@companion-module/base": "~1.13.4",
		"snmp-native": "^1.2.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.4.2",
		"@types/node": "^22.19.1",
		"@types/snmp-native": "^1.2.5",
		"eslint": "^9.39.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.6.2",
		"rimraf": "^6.1.2",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.47.0"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^22.12",
		"yarn": "^4.0.0"
	},
	"packageManager": "yarn@4.11.0"
}
